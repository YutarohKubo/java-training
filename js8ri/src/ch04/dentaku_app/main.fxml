<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ch04.dentaku_app.ControllerDentaku"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <TextField fx:id="fieldResult" />
    </top>

    <center>
        <GridPane vgap="10"
                  hgap="10">
            <Button fx:id="buttonOne"
                    text="1"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="0" />
            <Button fx:id="buttonTwo"
                    text="2"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="1" />
            <Button fx:id="buttonThree"
                    text="3"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="2" />
            <Button fx:id="buttonFour"
                    text="4"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="0" />
            <Button fx:id="buttonFive"
                    text="5"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="1" />
            <Button fx:id="buttonSix"
                    text="6"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="2" />
            <Button fx:id="buttonSeven"
                    text="7"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="0" />
            <Button fx:id="buttonEight"
                    text="8"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="1" />
            <Button fx:id="buttonNine"
                    text="9"
                    GridPane.rowIndex="2"
                    GridPane.columnIndex="2" />
            <Button fx:id="buttonPeriod"
                    text="."
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="0" />
            <Button fx:id="buttonZero"
                    text="0"
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="1" />
            <Button fx:id="buttonEqual"
                    text="="
                    GridPane.rowIndex="3"
                    GridPane.columnIndex="2" />

            <Button fx:id="buttonDel"
                    text="del"
                    GridPane.rowIndex="0"
                    GridPane.columnIndex="3" />

            <Button fx:id="buttonPlus"
                    text="+"
                    GridPane.rowIndex="1"
                    GridPane.columnIndex="3" />
        </GridPane>
    </center>

    <bottom>
        <Label fx:id="labelResult" />
    </bottom>

</BorderPane>
