<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="dc3_4.PropertyDialogController"
          alignment="CENTER"
          prefHeight="300.0" prefWidth="400.0"
          hgap="10"
          vgap="10">

    <Label text="Font:"
           GridPane.rowIndex="0"
           GridPane.columnIndex="0"
            GridPane.halignment="RIGHT"/>

    <ComboBox fx:id="fontChoice"
              GridPane.rowIndex="0"
              GridPane.columnIndex="1"
              GridPane.halignment="LEFT"/>

    <Label text="Font size:"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"
           GridPane.halignment="RIGHT"/>

    <ComboBox fx:id="fontSizeChoice"
              GridPane.rowIndex="1"
              GridPane.columnIndex="1"
              GridPane.halignment="LEFT"/>

    <Label text="Time color:"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0"
           GridPane.halignment="RIGHT"/>

    <ComboBox fx:id="timeColorChoice"
              GridPane.rowIndex="2"
              GridPane.columnIndex="1"
              GridPane.halignment="LEFT"/>

    <Label text="Background color:"
           GridPane.rowIndex="3"
           GridPane.columnIndex="0"
           GridPane.halignment="RIGHT"/>

    <ComboBox fx:id="backgroundColorChoice"
              GridPane.rowIndex="3"
              GridPane.columnIndex="1"
              GridPane.halignment="LEFT"/>

    <Button GridPane.rowIndex="5"
            GridPane.columnIndex="2"
            text="CANCEL"
            onAction="#onClickCancel"/>

    <Button GridPane.rowIndex="5"
            GridPane.columnIndex="3"
            text="  OK  "
            onAction="#onClickOk"/>

</GridPane>
